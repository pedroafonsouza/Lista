<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rivendev.youdo">

    <application
        android:name="com.rivendev.youdo.app.TaskApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_coral"
        android:roundIcon="@drawable/ic_launcher_coral"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.rivendev.youdo.View.Activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.rivendev.youdo.View.Activity.TaskFormActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.rivendev.youdo.View.Activity.LauncherActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <receiver android:name="com.rivendev.youdo.Services.AlarmReceiver" >
        </receiver>

    </application>

</manifest>